  </div>
</header>

<main class="main-registro">

  <section class="detalhe-registro">

    <div class="detalhe">
      <p>Detalhes de Registro</p>
    </div>

  </section>

  <section class="info-registro">

    <div class="completo">
      <div class="descricaoBox-registro">
        <p>*Nome Completo : </p>
        <input type="text" placeholder="Escreva seu nome..." />
      </div>
      <div>
        <div class="configuracaoBox-registro">
          <select name="nivel-acesso">
            <option value="Nível de acesso">Nível de acesso</option>
            <option value="Administrativo Total">Administrativo Total</option>
            <option value="Acesso Pedagógico Avançado">Acesso Pedagógico
              Avançado</option>
            <option value="Acesso Pedagógico">Acesso Pedagógico</option>
            <option value="Acesso Básico">Acesso Básico</option>
          </select>
        </div>
      </div>
    </div>

    <div class="registro-email">
      <div class="descricaoBox-registro">
        <p>*Email : </p>
        <input type="text" placeholder="Escreva seu email..." />
      </div>
    </div>

    <div class="completo">
      <div class="descricaoBox-registro">
        <p>*Senha : </p>
        <input type="text" placeholder="Escreva sua senha..." />
      </div>
      <div>
        <div class="configuracaoBox-registro">
          <select name="tipo">
            <option value="Tipo">Tipo</option>
            <option value="Mal comportamento">Estudante</option>
            <option value="Violência">Funcionários </option>
            <option value="Violência">Outros</option>
          </select>
        </div>
      </div>
    </div>

    <div class="botao-registro">
      <button class="button-login-registro" type="submit">Enviar </button>
    </div>

  </section>

</main>

<footer class="quarta-sessao">

